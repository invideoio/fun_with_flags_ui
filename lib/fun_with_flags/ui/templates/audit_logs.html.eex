<!DOCTYPE html>
<html lang="en">
  <%= _head(conn: @conn, title: "Audit Logs") %>
  <body>
    <nav id="fwf-top-bar" class="navbar navbar-inverse navbar-toggleable-xl">
      <a class="navbar-brand" href="https://github.com/tompave/fun_with_flags">FunWithFlags</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="<%= path(@conn, "/flags") %>">all flags</a>
          </li>

          <li class="nav-item active">
            <a class="nav-link" href="">audit logs</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="<%= path(@conn, "/settings") %>">settings</a>
          </li>
        </ul>

        <a href="<%= path(@conn, "/new") %>" class="btn btn-secondary">New Flag</a>
      </div>
    </nav>

    <div class="container mt-3">
      <h1>Audit Logs</h1>

      <%= if assigns[:audit_disabled] do %>
        <div class="alert alert-warning" role="alert">
          Audit logging is not enabled. Configure <code>:audit_logs</code> in your <code>fun_with_flags</code> config to enable it.
        </div>
      <% else %>
        <form class="form-inline mb-3" method="get" action="<%= path(@conn, "/audit_logs") %>">
          <div class="input-group fwf-wide-input">
            <input type="text"
                   class="form-control"
                   name="flag_name"
                   placeholder="Search by flag name..."
                   value="<%= html_escape(assigns[:search_flag_name] || "") %>">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="submit">Search</button>
            </span>
          </div>
          <%= if assigns[:search_flag_name] && assigns[:search_flag_name] != "" do %>
            <a href="<%= path(@conn, "/audit_logs") %>" class="btn btn-link">Clear</a>
          <% end %>
        </form>

        <%= _audit_log_table(assigns) %>
        <%= _audit_log_pagination(assigns) %>
      <% end %>
    </div>
    <script type="text/javascript" src="<%= path(@conn, "/assets/audit_logs.js") %>"></script>
  </body>
</html>
